{
  "manifest_version": 3,
  "name": "Know Now Extension",
  "version": "1.0",
  "description": "Helps users understand privacy policies with AI summaries.",
  "permissions": ["activeTab", "scripting", "tabs"],
  "host_permissions": ["http://127.0.0.1/*", "http://localhost/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
